<style>
    .navbarApp {
        z-index: 999;
        position: sticky;
        top: 0;
        background-color: #fff;
        padding: 1rem 0;
        border-bottom: 0;
        box-shadow: 0 0 2rem 0 rgba(41, 48, 66, .1);
    }

    /* --------------------------------------------------------------------
    * - toogle-sidebar
    ---------------------------------------------------------------------- */
    .btnToogleSidebar{
        position: relative;
        margin-right: 1rem;
        cursor: pointer;
        display: flex;
        height: 26px;
        width: 24px;
        border-radius: 0.25rem;
    }
    .btnToogleSidebar .hamburger {
        position: relative;
        transition: 0.3s;
    }
    .btnToogleSidebar .hamburger,
    .btnToogleSidebar .hamburger:after,
    .btnToogleSidebar .hamburger:before {
        content: "";
        display: block;
        border-radius: 0.25rem;
        width: 100%;
        height: 3px;
        background: var(--bs-body-color);
        transition: background .1s ease-in-out, color .1s ease-in-out;
    }
    .btnToogleSidebar .hamburger:before {
        position: absolute;
        top: -8px;
        width: 80%;
    }
    .btnToogleSidebar .hamburger:after {
        position: absolute;
        bottom: -8px;
        width: 60%;
    }

    .btnToogleSidebar:hover .hamburger,
    .btnToogleSidebar:hover .hamburger:after,
    .btnToogleSidebar:hover .hamburger::before{
        background: orange;
    }
</style>

<nav class="navbarApp navbar navbar-expand-lg">
    <div class="container-fluid">
        <a class="btnToogleSidebar" data-btn="toggleSidebar">
            <i class="hamburger align-self-center"></i>
        </a>

        <div class="navbar-nav nav-theme-user">
            <li class="nav-item dropdown">
                <button
                    class="d-flex align-items-center nav-link dropdown-toggle dropdown-toggle-animation2 gap-1 px-1"
                    aria-label="setup"
                    role="button"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                >
                    <i class="bi bi-person-circle fs-5"></i>

                    <div class="d-flex flex-column align-items-start">
                        <small class="lh-1" id="user-name">Luciano</small>
                        <small class="lh-1" id="user-email">luciano@carisma.com.br</small>
                        <small class="lh-1" id="user-cargo">Administrador</small>
                    </div>
                </button>

                <ul class="dropdown-menu dropdown-menu-animation dropdown-menu-end overflow-hidden border-0 py-0 shadow">
                    <li>
                        <a class="dropdown-item" aria-label="perfil" data-fancybox="" data-type="iframe" data-width="600" data-height="90%" href="/pages/setup/perfil/">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-person-fill-gear fs-5"></i>
                                <span class="ms-2 small">Alterar Senha</span>
                            </div>
                        </a>
                    </li>

                    <li>
                        <a class="dropdown-item" aria-label="login" href="/login/">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-box-arrow-right fs-5"></i>
                                <span class="ms-2 small">Sair</span>
                            </div>
                        </a>
                    </li>
                </ul>
            </li>
        </div>
    </div>
</nav>
